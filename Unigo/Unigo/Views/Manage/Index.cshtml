@model Unigo.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Email</dt>
        <dd>
            @Html.ActionLink("Change email", "ChangeEmail");
        </dd>
        <dt>Password:</dt>
        <dd>
            @Html.ActionLink("Change password", "ChangePassword")
        </dd>
        <dt>External Logins:</dt>
        <dd>
            @Model.Logins.Count
            @Html.ActionLink("Manage", "ManageLogins")
        </dd>
        <dt>First and Last Name</dt>
        <dd>
            @Html.ActionLink("Change first and last name", "ChangeFirstLastName");
        </dd>
    </dl>
</div>
